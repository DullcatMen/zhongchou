.clearFloat
	width 0
	height 0
	clear both
body
	.top-nav
		width 1190px
		height 41px
		background-color #fff
		border 1px solid #e8e8e8
		margin 0 auto
		position relative
		a
			display block
			float left
			font-size 12px
			color #6d6d6d
			height 39px
			line-height 39px
			text-align center
			padding 0 20px
			border-right 1px solid #fff
			border-left 1px solid #fff
			&:not(.area):hover
				border-right 1px solid #e8e8e8
				border-left 1px solid #e8e8e8
				color red
		.btn-ok
			width 210px
			height 39px
			position absolute
			top 0
			left 385px
			border 1px solid #fff
			display none
			// background-color red
			.btnOk
				width 50px
				height 20px
				line-height 20px
				text-align center
				font-size 12px
				color #fff
				background-color red
				margin-left 150px
				margin-top 8px
				cursor pointer
				border-radius 2px
		.inputBox
			// float left
			width 125px
			height 39px
			margin-left 10px
			position absolute
			top 0
			left 385px
			// background-color red
			input
				float left
				width 55px
				height 23px
				border 1px solid #e8e8e8
				margin-top 7px
				font-size 12px
				text-indent 5px
			div
				float left
				padding-top 8px
		.area
			margin-left 300px
	.main233
		width 1190px
		height 815px
		margin 0 auto
		.main-box
			width 221px
			height 392px
			float left
			margin-top 22px
			margin-right 17px
			border 1px solid #ededed
			position relative
			// background-color red
			.imgbox
				display block
				width 100%
				height 250px
				overflow hidden
				img
					width 100%
					height 100%
			.jiage
				width 100%
				height 22px
				line-height 22px
				margin-top 10px
				padding 0 10px
				font-size 18px
				// color #F40
				font-weight 900
				font-family 'arial'
				.bao-icon
					display inline-block
					width 27px
					height 14px
					background-color #F40
					position relative
					bottom 3px
					left 2px
					color #fff
					font-size 10px
					text-align center
					line-height 14px
			.sm-text
				width 100%
				line-height 22px
				font-size 12px
				padding 0 10px
				margin-top 5px
				overflow hidden
				white-space nowrap
				text-overflow ellipsis
			.sell-num
				width 100%
				line-height 20px
				font-size 12px
				padding-left 10px
				margin-top 5px
				color #aaa
			.bottom-box
				width 100%
				height 30px
				padding 0 10px
				.username
					float left
					width 70%
					height 30px
					line-height 30px
					font-size 12px
					color #aaa
				.place
					float left
					width 30%
					height 30px
					line-height 30px
					font-size 12px
					color #aaa
					text-align right
			.footer
				width 100%
				height 20px
				padding 0 10px
				.icon-1
					width 16px
					height 16px
					background-color red
					float left
					background-image url(../img/all-icon.png)
					background-position -269px -213px
				.icon-2
					width 16px
					height 16px
					// background-color red
					float right
					background-image url(../img/all-icon2.png)
					background-position -435px -86px
			.btn-mai
				width 60px
				height 20px
				text-align center
				line-height 20px
				font-size 12px
				background-color #aaa
				color #fff
				position absolute
				bottom 7px
				left 80px
				cursor pointer
				display none
				border-radius 2px
	.embox
		width 1190px
		height 18px
		// background-color red
		margin 20px auto
		text-align center
		em
			display inline-block
			width 37px
			height 37px
			line-height 37px
			background-color #fff
			color #000
			margin-right 0px
			cursor pointer
			border 1px solid #e8e8e8
			&:hover
				color #f40
				border-color #f40
					
			